    <!-- Alpine.js App Logic -->
    <script>
        function menuApp() {
            return {
                searchQuery: '',
                showModal: false,
                selectedMenu: {
                    id: null,
                    name: '',
                    description: '',
                    price: 0,
                    image_path: null,
                    category: ''
                },
                modalQuantity: 1,
                modalNotes: '',
                
                openModal(menu) {
                    console.log('Opening modal with menu:', menu);
                    this.selectedMenu = menu;
                    this.modalQuantity = 1;
                    this.modalNotes = '';
                    this.showModal = true;
                    document.body.style.overflow = 'hidden';
                },
                
                closeModal() {
                    this.showModal = false;
                    document.body.style.overflow = 'auto';
                },
                
                increaseQuantity() {
                    this.modalQuantity++;
                },
                
                decreaseQuantity() {
                    if (this.modalQuantity > 1) {
                        this.modalQuantity--;
                    }
                },
                
                formatPrice(price) {
                    return new Intl.NumberFormat('id-ID').format(price);
                },
                
                async quickAdd(menuId) {
                    const formData = new FormData();
                    formData.append('menu_id', menuId);
                    formData.append('quantity', 1);
                    formData.append('_token', document.querySelector('meta[name="csrf-token"]').content);
                    
                    try {
                        const response = await fetch('{{ route("cart.add") }}', {
                            method: 'POST',
                            body: formData
                        });
                        
                        if (response.ok) {
                            window.location.reload();
                        }
                    } catch (error) {
                        console.error('Error adding to cart:', error);
                    }
                },
                
                async addToCart() {
                    const formData = new FormData();
                    formData.append('menu_id', this.selectedMenu.id);
                    formData.append('quantity', this.modalQuantity);
                    formData.append('notes', this.modalNotes);
                    formData.append('_token', document.querySelector('meta[name="csrf-token"]').content);
                    
                    try {
                        const response = await fetch('{{ route("cart.add") }}', {
                            method: 'POST',
                            body: formData
                        });
                        
                        if (response.ok) {
                            this.closeModal();
                            window.location.reload();
                        }
                    } catch (error) {
                        console.error('Error adding to cart:', error);
                    }
                },
                
                hasResults() {
                    const query = this.searchQuery.toLowerCase();
                    if (query === '') return true;
                    
                    const allMenus = document.querySelectorAll('[x-show*="searchQuery"]');
                    let hasVisible = false;
                    
                    allMenus.forEach(menu => {
                        if (menu.style.display !== 'none') {
                            hasVisible = true;
                        }
                    });
                    
                    return hasVisible;
                }
            }
        }
    </script>

